{
    "manifest_version": 3,
    "name": "MCPI Client",
    "version": "1.0.0",
    "description": "Model Context Protocol Integration Client",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon_inactive.svg",
        "48": "icons/icon_inactive.svg",
        "128": "icons/icon_inactive.svg"
      }
    },
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  }